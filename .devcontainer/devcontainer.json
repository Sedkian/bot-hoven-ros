{
  "name": "Bot-Hoven",
  "dockerFile": "Dockerfile",
  "build": {
    "args": {
      // This build argument specifies the base image for the Docker container.
      // For development, use "osrf/ros:jazzy-desktop-full".
      // For production (Raspberry Pi 5), use "arm64v8/ros:jazzy-ros-base-noble".
      "BOTHOVEN_BASE_IMAGE": "arm64v8/ros:jazzy-ros-base-noble",
      // Specify the environment: "production" or "development"
      "BOTHOVEN_ENVIRONMENT": "production"
    }
  },
  "runArgs": [
    "--privileged",
    "--network=host",
    "-e",
    "DISPLAY=${localEnv:DISPLAY}",
    "-v",
    "/tmp/.X11-unix:/tmp/.X11-unix",
  ],
  "overrideCommand": false,
  "initializeCommand": "bash -c 'if command -v nvidia-smi &>/dev/null; then echo \"--gpus=all\"; fi'",
  "workspaceMount": "source=${localWorkspaceFolder},target=/${localWorkspaceFolderBasename},type=bind",
  "workspaceFolder": "/${localWorkspaceFolderBasename}",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.bash_history,target=/home/ubuntu/.bash_history,type=bind",
    "source=bothoven-devcontainer-bashhistory,target=/commandhistory,type=volume",
    {
      "source": "/etc/localtime",
      "target": "/etc/localtime",
      "type": "bind"
    }
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "smilerobotics.urdf",
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools-extension-pack",
        "redhat.vscode-xml",
        "GitHub.copilot"
      ]
    }
  }
}
